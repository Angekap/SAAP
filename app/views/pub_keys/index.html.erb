<div class='row'>
  <div class='col-lg-12'>
    <div class='box'>
      <div class='box-header'>
        <h2><i class="icon-list"></i>
          <%= I18n.t('headers.list_resource', resource: PubKey.model_name.human(count: :many))%>
        </h2>
        <div class='box-icon'>
          <%= link_to new_pub_key_path do %>
            <i class='icon-plus'></i>
          <%- end %>
        </div>
      </div>
      <div class='box-content'>
        <table class='table table-bordered table-condensed table-striped'>
          <thead>
            <tr>
              <th><%= PubKey.human_attribute_name(:name) %></th>
              <th style='width: 10%'><%= I18n.t('headers.options') %></th>
            </tr>
          </thead>
          <tbody>
            <%- @pub_keys.each do |pub_key|  %>
              <tr>
                <td><%= pub_key.name %></td>
                <td>
                  <%= link_to pub_key_url(pub_key), method: :delete, class: 'btn btn-danger', data: { confirm: t('links.confirmation') } do %>
                    <i class='icon-trash'></i>
                  <%- end  %>
                </td>
              </tr>
            <%- end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
