<div class='row'>
  <div class='col-lg-12'>
    <div class='box'>
      <div class='box-header'>
        <h2><i class="icon-plus"></i>
          <%= @crowd %>
        </h2>
      </div>
      <div class='box-content'>
        <table class='table table-bordered'>
          <tbody>
            <tr>
                <td><%= Crowd.human_attribute_name(:name) %></td>
                <td><%= @crowd.name %></td>
            </tr>
            <tr>
                <td><%= Crowd.human_attribute_name(:subject) %></td>
                <td><%= @crowd.subject %></td>
            </tr>
            <tr>
                <td><%= Crowd.human_attribute_name(:semester) %></td>
                <td><%= @crowd.semester %>/<%= @crowd.year %></td>
            </tr>
          </tbody>
        </table>
        <h2><%= Enunciation.model_name.human(count: :many) %></h2>
        <table class='table table-bordered'>
          <thead>
            <tr>
              <th><%= Enunciation.human_attribute_name(:name) %></th>
              <th><%= Enunciation.human_attribute_name(:end_at) %></th>
            </tr>
          </thead>
          <tbody>
            <%- @crowd.enunciations.each do |enunciation| %>
              <tr>
                <td><%= enunciation.name %></td>
                <td><%= enunciation.end_at %></td>
              </tr>
            <%- end %>
          </tbody>
        </table>

        <% if can? :edit, @crowd %>
          <%= link_to I18n.t('links.edit'), edit_crowd_path(@crowd), class: 'btn btn-success'  %>
        <%- end %>
      </div>
    </div>
  </div>
</div>
