<div class='row'>
  <div class='col-lg-12'>
    <div class='box'>
      <div class='box-header'>
        <h2><i class="icon-plus"></i>
          <%= I18n.t('headers.import', resource: Student.model_name.human)%>
        </h2>
      </div>
      <div class='box-content'>
        <%= simple_form_for :upload, url: upload_students_path do |f| %>
          <fieldset class='col-sm-12'>
            <%= f.input :file, as: :file %>
            <div class='form-actions'>
              <%= f.submit class: 'btn btn-primary' %>
              <%= link_to I18n.t('links.back'), polymorphic_url(Student), class: :btn %>
            </div>
          </fieldset>
        <%- end %>
      </div>
    </div>
  </div>
</div>
