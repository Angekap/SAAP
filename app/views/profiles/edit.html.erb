<div class='row'>
  <div class='col-lg-12'>
    <div class='box'>
      <div class='box-header'>
        <h2><i class="icon-plus"></i>
          <%= I18n.t('headers.edit_resource', resource: I18n.t('profile'))%>
        </h2>
      </div>
      <div class='box-content'>
        <%= simple_form_for @user, as: :user, url: profile_url do |f| %>
          <fieldset class='col-sm-12'>
            <%= f.input :name %>
            <%= f.input :email %>
            <%= f.input :username, disabled: true %>
            <%= f.input :password %>
            <%= f.input :password_confirmation %>
            <div class="form-actions">
              <%= f.submit I18n.t('links.save'), class: 'btn btn-primary' %>
            </div>
          </fieldset>
        <%- end %>
      </div>
    </div>
  </div>
</div>
